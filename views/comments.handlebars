<div class="push8"></div>
  <div class="container pb-5">
    <div class="row">
      <div class="col-md-12">
        <div class="card p-3 m-1 row bg-light border-secondary mb-6">
          <h3 class="text-dark p-3 text-center commentTitle">Comments</h3>
          <div class="row">
            
            {{#if Comment}}
              {{#each Comment}}
                <div data-toggle="collapse" action="{{Comment}}?_method=GET" method="POST" class=" col-md-6 col-lg-4">

                  <div class="card p-3 mb-3"  style="width: 18rem;">
                    <img class="card-img-top" src="" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title" id="{{_id}}" style="height: 80px">Posted By {{this.name}}</h5>
                      <p class="card-text" style="height: 100px; overflow:scroll">{{this.message}}</p>
                      <div class="row">
                        <div class="col-12">
                          <a href="{{this.link}}" class="btn btn-primary">Read</a>
                          <a><button href="#" class="btn btn-info saveBtn" value="{{_id}}">Save</button></a>
                          <a><button href="#" class="btn btn-info commentBtn" value="{{_id}}">Rave</button></a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <br>
              {{/each}}
            {{else}}
              <div class="col-12 text-center">
                <h6 class="text-center text-danger">There are currently no comments on this article.</h6>
              </div>
                  
            {{/if}}
          </div>
        </div>
      </div>
    </div>	
      
  
